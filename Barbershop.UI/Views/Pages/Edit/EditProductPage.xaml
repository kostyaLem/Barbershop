<UserControl
    x:Class="Barbershop.UI.Views.Pages.Edit.EditProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Barbershop.UI.Views.Pages.Edit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Barbershop.Contracts.Models;assembly=Barbershop.Contracts"
    x:Name="control"
    Width="350"
    Height="200"
    d:Background="White"
    mc:Ignorable="d">
    <Grid d:DataContext="{d:DesignInstance models:ProductDto}">
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="Margin" Value="3,10,3,2" />
            </Style>
            <Style TargetType="StackPanel">
                <Setter Property="Margin" Value="5" />
            </Style>
        </Grid.Resources>

        <StackPanel>

            <TextBlock Text="Название" />
            <TextBox Text="{Binding Name}" />

            <TextBlock Text="Стоимость" />
            <hc:NumericUpDown Value="{Binding Cost}" />

        </StackPanel>
    </Grid>
</UserControl>
